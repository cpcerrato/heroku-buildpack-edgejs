#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# debug
# set -x

# parse and derive params
BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

# Override HOME environment
export HOME_APP=$HOME
export HOME=$BUILD_DIR

function error() {
  echo " !     $*" >&2
  exit 1
}

function topic() {
  echo "-----> $*"
}

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

function install_apt(){
  APTFILE=$1
  TEMP=$2

  for PACKAGE in $(cat ${APTFILE}); do
    if [[ $PACKAGE == *deb ]]; then
      PACKAGE_NAME=$(basename $PACKAGE .deb)
      if [ -z "$TEMP" ];then
        PACKAGE_FILE=$APT_CACHE_DIR/archives/00_$PACKAGE_NAME.deb
      else
        PACKAGE_FILE=$APT_CACHE_DIR/temp/00_$PACKAGE_NAME.deb
      fi 
      topic "PACKAGE_FILE = $PACKAGE_FILE" 
  
      topic "Fetching $PACKAGE"
      curl -s -L -z $PACKAGE_FILE -o $PACKAGE_FILE $PACKAGE 2>&1 | indent
    else
      topic "Fetching .debs for $PACKAGE"
      apt-get $APT_OPTIONS -y --force-yes -d install --reinstall $PACKAGE | indent
    fi
  done
  
  if [ -z "$TEMP" ]; then
    for DEB in $(ls -1 $APT_CACHE_DIR/archives/*.deb); do
      topic "Installing $(basename $DEB)"
      dpkg -x $DEB $BUILD_DIR/.apt/
    done
  else
    for DEB in $(ls -1 $APT_CACHE_DIR/temp/*.deb); do
      topic "Installing $(basename $DEB)"
      dpkg -x $DEB $BUILD_DIR/temp/
    done
  fi
  
#  for DEB in $(ls -1 $APT_CACHE_DIR/archives/*.deb); do
#    topic "Installing $(basename $DEB)"
#    if [ -z "$TEMP" ]; then
#      dpkg -x $DEB $BUILD_DIR/.apt/
#    else
#      dpkg -x $DEB $BUILD_DIR/temp/
#    fi
#  done

#  rm -rf $APT_CACHE_DIR/archives/*.deb
}


mkdir -p $BUILD_DIR/.apt
mkdir -p $BUILD_DIR/temp

APT_CACHE_DIR="$CACHE_DIR/apt/cache"
APT_STATE_DIR="$CACHE_DIR/apt/state"

mkdir -p "$APT_CACHE_DIR/archives/partial"
mkdir -p "$APT_CACHE_DIR/temp/partial"
mkdir -p "$APT_STATE_DIR/lists/partial"

mkdir -p $BUILD_DIR/.profile.d

# Set repositories
cat <<EOF > $BUILD_DIR/temp/sources.list
deb http://archive.ubuntu.com/ubuntu trusty main
deb http://archive.ubuntu.com/ubuntu trusty-security main
deb http://archive.ubuntu.com/ubuntu trusty-updates main
deb http://archive.ubuntu.com/ubuntu trusty universe
deb http://download.mono-project.com/repo/debian wheezy main
deb http://download.mono-project.com/repo/debian wheezy-libjpeg62-compat main
deb http://httpredir.debian.org/debian jessie main
EOF

# Set apt preferences to avoid install all packages from jessie
cat <<EOF > $BUILD_DIR/temp/preferences
Package: *
Pin: release n=trusty*
Pin-Priority: 990

Package: *
Pin: origin "download.mono-project.com"
Pin-Priority: 999

Package: *
Pin: origin "apt.postgresql.org"
Pin-Priority: 999

Package: *
Pin: origin "httpredir.debian.org"
Pin-Priority: 800
EOF

# Libraries
cat <<EOF >$BUILD_DIR/temp/Aptfile
libgdiplus
libunwind8
gettext
zlib1g
EOF

# Temporal dependencies
cat <<EOF >$BUILD_DIR/temp/Apttemp
g++
pkg-config
libssl-dev
make
libssl-dev
libcurl4-openssl-dev
libicu-dev
uuid-dev
unzip
mono-complete
EOF

## Temporal mono-complete
#cat <<EOF >$BUILD_DIR/temp/mono
#mono-complete
#EOF

# Copy keyring file and add keys mono and jessie
cp -a /etc/apt/trusted.gpg $BUILD_DIR/temp/trusted.gpg
apt-key --keyring $BUILD_DIR/temp/trusted.gpg adv --keyserver keyserver.ubuntu.com --recv-keys 3FA7E0328081BFF6A14DA29AA6A19B38D3D831EF
apt-key --keyring $BUILD_DIR/temp/trusted.gpg adv --keyserver keyserver.ubuntu.com --recv-keys 126C0D24BD8A2942CC7DF8AC7638D0442B90D010


# Force APT_OPTIONS to override default values
APT_OPTIONS="-o debug::nolocking=true -o dir::cache=$APT_CACHE_DIR -o dir::state=$APT_STATE_DIR -o Dir::Etc::SourceList=$BUILD_DIR/temp/sources.list -o Dir::Etc::Trusted=$BUILD_DIR/temp/trusted.gpg -o Dir::Etc::Preferences=$BUILD_DIR/temp/preferences"

topic "Updating apt caches"
apt-get $APT_OPTIONS update | indent

install_apt $BUILD_DIR/temp/Apttemp temp
install_apt $BUILD_DIR/temp/Aptfile
#install_apt $BUILD_DIR/temp/mono temp

topic "Writing profile script"
cat <<EOF >$BUILD_DIR/.profile.d/000_apt.sh
export PATH="\$HOME/.apt/usr/bin:\$PATH"
export LD_LIBRARY_PATH="\$HOME/.apt/usr/lib/x86_64-linux-gnu:\$HOME/.apt/usr/lib/i386-linux-gnu:\$HOME/.apt/usr/lib:\$LD_LIBRARY_PATH"
export LIBRARY_PATH="\$HOME/.apt/usr/lib/x86_64-linux-gnu:\$HOME/.apt/usr/lib/i386-linux-gnu:\$HOME/.apt/usr/lib:\$LIBRARY_PATH"
export INCLUDE_PATH="\$HOME/.apt/usr/include:\$INCLUDE_PATH"
export CPATH="\$INCLUDE_PATH"
export CPPPATH="\$INCLUDE_PATH"
export PKG_CONFIG_PATH="\$HOME/.apt/usr/lib/x86_64-linux-gnu/pkgconfig:\$HOME/.apt/usr/lib/i386-linux-gnu/pkgconfig:\$HOME/.apt/usr/lib/pkgconfig:\$PKG_CONFIG_PATH"
export MONO_PATH="\$HOME/.apt/usr/lib/mono/4.0:\${HOME}/.apt/usr/lib/mono/3.5:\${HOME}/.apt/usr/lib/mono/2.0"
export MONO_CONFIG="\${HOME}/.apt/etc/mono/config"
export MONO_CFG_DIR="\${HOME}/.apt/etc"
export MONO_REGISTRY_PATH="\${HOME}/.mono/registry"
export DNX_USER_HOME="\${HOME}/.dnx"
export DNX_GLOBAL_HOME="\${HOME}/.apt/usr/local/lib/dnx"
source \$HOME/.dnx/dnvm/dnvm.sh
dnvm use edge-coreclr -p -r coreclr
EOF

export PATH="$BUILD_DIR/.apt/usr/bin:$PATH"
export LD_LIBRARY_PATH="$BUILD_DIR/.apt/usr/lib/x86_64-linux-gnu:$BUILD_DIR/.apt/usr/lib/i386-linux-gnu:$BUILD_DIR/.apt/usr/lib:$BUILD_DIR/temp/usr/lib/x86_64-linux-gnu:$BUILD_DIR/temp/usr/lib/i386-linux-gnu:$BUILD_DIR/temp/usr/lib:$LD_LIBRARY_PATH"
export LIBRARY_PATH="$BUILD_DIR/.apt/usr/lib/x86_64-linux-gnu:$BUILD_DIR/.apt/usr/lib/i386-linux-gnu:$BUILD_DIR/.apt/usr/lib:$BUILD_DIR/temp/usr/lib/x86_64-linux-gnu:$BUILD_DIR/temp/usr/lib/i386-linux-gnu:$BUILD_DIR/temp/usr/lib:$LIBRARY_PATH"
export INCLUDE_PATH="$BUILD_DIR/.apt/usr/include:$BUILD_DIR/temp/usr/include$INCLUDE_PATH"
export CPATH="$INCLUDE_PATH"
export CPPPATH="$INCLUDE_PATH"
export PKG_CONFIG_PATH="$BUILD_DIR/.apt/usr/lib/x86_64-linux-gnu/pkgconfig:$BUILD_DIR/.apt/usr/lib/i386-linux-gnu/pkgconfig:$BUILD_DIR/.apt/usr/lib/pkgconfig:$PKG_CONFIG_PATH"
  
# Change mono paths to avoid node-gyp install crash
sed -e "s|/usr/|$BUILD_DIR/temp/usr/|g" -i $BUILD_DIR/temp/usr/bin/dmcs

topic "Install edge dependences node-gyp and mocha"
npm install node-gyp -g
npm install mocha -g

topic "Install dnvm."
export DNX_USER_HOME=$BUILD_DIR/.dnx
export DNX_GLOBAL_HOME=$BUILD_DIR/.apt/usr/local/lib/dnx
mkdir -p $DNX_GLOBAL_HOME
cd $BUILD_DIR/
curl -sSL https://raw.githubusercontent.com/aspnet/Home/dev/dnvminstall.sh > dnvminstall.sh 
chmod +x dnvminstall.sh
./dnvminstall.sh
. "$DNX_USER_HOME/dnvm/dnvm.sh" 
dnvm install latest -r coreclr -alias edge-coreclr -g

topic "Install edge.js"
PWD_STORE=$PWD
curl https://codeload.github.com/tjanczuk/edge/zip/master > $BUILD_DIR/node_modules/edge.js.zip
cd $BUILD_DIR/node_modules/
unzip  $BUILD_DIR/node_modules/edge.js.zip
rm $BUILD_DIR/node_modules/edge.js.zip
mv edge-master edge
cd edge/
EDGE_DIRECTORY=$(pwd)
dnvm use edge-coreclr -p -r coreclr
npm install
npm cache clean

cd $PWD_STORE

# Delete temporal folder
rm -rf $BUILD_DIR/temp

# Set HOME environment to original value
export HOME=$HOME_APP

export | grep -E -e ' (PATH|LD_LIBRARY_PATH|LIBRARY_PATH|INCLUDE_PATH|CPATH|CPPPATH|PKG_CONFIG_PATH)='  > "$LP_DIR/export"
